{
  "name": "@restqa/restqa",
  "version": "0.0.20",
  "description": "An all in one test automation runner",
  "scripts": {
    "start:library": "export $(cat .env | xargs) && cucumber-js --require ./src/setup.js ./sample-project",
    "test": "jest",
    "test:watch": "jest --watch --coverage",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "api",
    "restapi",
    "cucumber-export",
    "test",
    "cucumber",
    "restqa"
  ],
  "author": "Olivier Rodomond",
  "license": "MIT",
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@restqa/cucumber-export": "^0.1.1",
    "@restqa/restqapi": "0.0.13",
    "@restqa/restqdata": "0.0.2",
    "chalk": "^4.0.0",
    "commander": "^6.2.1",
    "console-table-printer": "^1.4.3",
    "cucumber": "^6.0.5",
    "inquirer": "^7.3.3",
    "proxyquire": "^2.1.3",
    "yaml": "^1.9.2"
  },
  "bin": {
    "restqa": "./bin/restqa"
  },
  "main": "src/index.js",
  "devDependencies": {
    "eslint": "^7.16.0",
    "jest": "^26.6.3",
    "jest-runner-eslint": "^0.10.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017
    }
  },
  "jest": {
    "projects": [
      {
        "displayName": "test"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/src/**/*.js"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/restqa/restqa.git"
  },
  "bugs": {
    "url": "https://github.com/restqa/restqa/issues"
  },
  "homepage": "https://github.com/restqa/restqa#readme"
}
